[Unit]
Description=Wifi Connect
Wants=network-online.target
After=network-online.target

[Service]
WorkingDirectory=/home/{{ lookup('env', 'USER') }}/screenly
User={{ lookup('env', 'USER') }}
Type=oneshot

ExecStartPre=/bin/rm -f /home/{{ lookup('env', 'USER') }}/.screenly/initialized
ExecStart=/usr/bin/python /home/{{ lookup('env', 'USER') }}/screenly/start_resin_wifi.py
ExecStartPost=/usr/bin/touch /home/{{ lookup('env', 'USER') }}/.screenly/initialized

[Install]
WantedBy=multi-user.target
