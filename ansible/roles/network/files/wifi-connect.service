[Unit]
Description=Wifi Connect
Wants=network-online.target
After=network-online.target

[Service]
WorkingDirectory=/home/${USER}/screenly
User=${USER}
Type=oneshot

ExecStartPre=/bin/rm -f /home/${USER}/.anthias/initialized
ExecStart=/usr/bin/python /home/${USER}/screenly/start_resin_wifi.py
ExecStartPost=/usr/bin/touch /home/${USER}/.anthias/initialized

[Install]
WantedBy=multi-user.target
